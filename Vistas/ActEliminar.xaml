<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="serviciosWeb.Vistas.ActEliminar"
             Title="ActEliminar">
    <VerticalStackLayout>
        <Label 
            Text="Actualizar /Eliminar Estudiante"
            HorizontalTextAlignment="Center"
            FontSize="20"/>
        <Entry x:Name="txtCodigo" IsReadOnly="True"></Entry>
        
        <Entry x:Name="txtNombre" Placeholder="Ingrese el nombre"></Entry>
        <Entry x:Name="txtApellido" Placeholder="Ingrese el apellido"></Entry>
        <Entry x:Name="txtEdad" Placeholder="Ingrese la edad"></Entry>

        <Button x:Name="btnActualizar" Text="ACTUALIZAR" Clicked="btnActualizar_Clicked"    />
        <Button x:Name="btnEliminar" Text="ELIMINAR" Clicked="btnEliminar_Clicked"/>

    </VerticalStackLayout>
</ContentPage>