<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="serviciosWeb.Vistas.AgregarEstudiante"
             Title="AgregarEstudiante">
    <VerticalStackLayout>
        <Label 
            Text="Agregar Estudiante" FontSize="24" HorizontalTextAlignment="Center" />

        <Entry x:Name="txtNombre" Placeholder="Ingrese el nombre"></Entry>
        <Entry x:Name="txtApellido" Placeholder="Ingrese el apellido"></Entry>
        <Entry x:Name="txtEdad" Placeholder="Ingrese la edad"></Entry>

        <Button x:Name="btnAgregar" Text="Agregar" Clicked="btnAgregar_Clicked"></Button>
    </VerticalStackLayout>
</ContentPage>